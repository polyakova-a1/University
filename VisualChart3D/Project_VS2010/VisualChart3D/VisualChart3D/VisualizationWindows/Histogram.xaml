<Window x:Class="VisualChart3D.VisualizationWindows.Histogram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisualChart3D.VisualizationWindows"
        mc:Ignorable="d"
        Title="Визуализация данных при помощи столбчатой диаграммы" Height="450" Width="800"
        IsVisibleChanged="OnVisibleChanged">
    <Grid>
        <Slider Name="BinsSlider" Minimum="1" Value="1" TickFrequency="1"
                IsSnapToTickEnabled="True" ValueChanged="BinsSlider_ValueChanged"
                AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="0" />
        <WpfPlot Name="HistPlot" Margin="0,30,0,0" />
    </Grid>
</Window>
